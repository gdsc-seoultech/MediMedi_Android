<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".fragment.alarm.AlarmFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:padding="16dp"
        android:id="@+id/app_bar"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alarm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"/>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/btn_twice"
        android:layout_width="391dp"
        android:layout_height="254dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/background_border"
        android:orientation="vertical"
        android:paddingVertical="90dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_three_times"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="twice a day"
            android:textColor="@color/white"
            android:textSize="40dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_three_times"
        android:layout_width="391dp"
        android:layout_height="254dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/background_border"
        android:orientation="vertical"
        android:paddingVertical="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="three times a day"
            android:textColor="@color/white"
            android:textSize="40dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>