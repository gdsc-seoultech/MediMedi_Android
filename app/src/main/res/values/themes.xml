<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MediMedi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item> <!-- 상태바 색상 -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item> <!-- 상태바 글자 흰색 -->

        <!-- Customize your theme here. -->
    </style>
    
    <style name="NumberPickerStyle">
        <item name="android:textSize">30dp</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <!-- 스위치 토글 색상 -->
    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/purple_200</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#f1f1f1</item>
    </style>
</resources>